@model CourseViewModel

@{
    ViewData["Title"] = "New Course";
    @using OnlineCoursesApp.DAL.Models;
}

<h2>New Course</h2>
<form asp-action="SaveNewCourse" asp-controller="Instructor" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="TechId" value="@ViewBag.InstructorId" />

    <div class="form-group" style="display: flex; align-items: center;">

        <label style="margin-right: 20px;  white-space: nowrap;" for="name">Course Name</label>
        <input type="text" id="name" class="form-control" asp-for="Name" required />
    </div>

    <div class="form-group" style="display: flex; align-items: center;">
        <label for="CourseType" style="margin-right: 84px ; white-space:nowrap;">Type</label>
        <select asp-for="CourseType" class="form-control" asp-items="Html.GetEnumSelectList<CourseType>()"></select>
    </div>

    <div class="form-group" style="display: flex; align-items: center;">
        <label style="margin-right: 38px;  white-space: nowrap;" for="description ">Description</label>
        <textarea id="description" class="form-control" asp-for="Description" required></textarea>
    </div>

    <div class="form-group" style="display: flex; align-items: center;">
        <label style="margin-right: 18px;  white-space: nowrap;" for="image">Upload Image</label>
        <input type="file" id="image" class="form-control" asp-for="Image" />
    </div>

    <button type="submit" class="btn btn-primary">Save Course</button>
</form>
